<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WeatherWidget.Views.WeatherFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WeatherWidget.Views"
        Width="560"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"
        Deactivated="Window_Deactivated"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#EDEDED" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#EDEDED" />
        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#CC2A2A2A" Offset="0" />
            <GradientStop Color="#D62A2A2A" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#353535" />
        <SolidColorBrush x:Key="DividerBrush" Color="#3A3A3A" />
        <LinearGradientBrush x:Key="FlyoutBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#C61C1C1C" Offset="0" />
            <GradientStop Color="#D91A1A1A" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="GlowColorBrush" Color="#80FFFFFF" />

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Margin" Value="0,2,0,10"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder"
            Background="{DynamicResource FlyoutBackgroundBrush}"
            BorderThickness="0"
            Padding="24">
        <Border.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" Y="40" />
        </Border.RenderTransform>

        <Grid x:Name="RootGrid">
            <!-- Weather View -->
            <StackPanel x:Name="WeatherView" Visibility="Visible">
                <!-- Current Conditions -->
                <Border x:Name="CurrentConditionsCard"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="0"
                        Padding="0"
                        Margin="0,0,0,22"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="12" />
                    </Border.RenderTransform>
                    <StackPanel>
                        <!-- Location Name + Actions -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="CityText"
                                       Grid.Column="0"
                                       FontSize="18"
                                       FontWeight="ExtraBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Opacity="0.95"
                                       VerticalAlignment="Top" />

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top">
                                <Button Click="OpenSettings_Click"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTip="Settings">
                                    <TextBlock Text="&#xE713;" 
                                               FontFamily="Segoe Fluent Icons" 
                                               FontSize="16"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Opacity="0.7" />
                                </Button>

                                <Button Click="OpenWeatherApp_Click"
                                        Style="{StaticResource IconButtonStyle}"
                                        Margin="4,0,0,0"
                                        ToolTip="Open Weather App">
                                    <TextBlock Text="&#xE8A7;" 
                                               FontFamily="Segoe Fluent Icons" 
                                               FontSize="16"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               Opacity="0.7" />
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Weather Icon -->
                            <Image x:Name="LargeIcon"
                                   Grid.Column="0"
                                   Width="80"
                                   Height="80"
                                   Margin="0,0,32,0"
                                   VerticalAlignment="Center"
                                   RenderOptions.BitmapScalingMode="HighQuality" />

                            <!-- Temperature, Condition, and Sun Times -->
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                        <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock x:Name="MainTemp"
                                                   Grid.Column="0"
                                                   FontSize="52"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   Margin="0,0,0,4" />

                                        <StackPanel Grid.Column="1"
                                                    Margin="16,18,0,0"
                                                    VerticalAlignment="Top">
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,0,0,5">
                                                <Image Source="/Assets/PNG/ui_high.png"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                                <TextBlock x:Name="HighTempText"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           Opacity="0.8" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Assets/PNG/ui_low.png"
                                                       Width="14"
                                                       Height="14"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"
                                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                                <TextBlock x:Name="LowTempText"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           Opacity="0.8" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock x:Name="ConditionFull"
                                               FontSize="15"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,0,0,4" />
                                    </StackPanel>

                                    <TextBlock x:Name="FeelsLikeText"
                                               Grid.Row="1"
                                               FontSize="13"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               Opacity="0.7" />
                                </Grid>

                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom"
                                      Margin="16,0,8,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Sunrise (Col 0) -->
                                    <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Sunrise"
                                                   Style="{StaticResource MetricLabelStyle}"
                                                   Margin="0,0,0,6"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Image Source="/Assets/PNG/ui_sunrise.png"
                                                   Width="16"
                                                   Height="16"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="HighQuality" />
                                            <TextBlock x:Name="SunriseInlineText"
                                                       Style="{StaticResource MetricValueStyle}"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Sunset (Col 2) -->
                                    <StackPanel Grid.Column="2"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Sunset"
                                                   Style="{StaticResource MetricLabelStyle}"
                                                   Margin="0,0,0,6"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Image Source="/Assets/PNG/ui_sunset.png"
                                                   Width="16"
                                                   Height="16"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"
                                                   RenderOptions.BitmapScalingMode="HighQuality" />
                                            <TextBlock x:Name="SunsetInlineText"
                                                       Style="{StaticResource MetricValueStyle}"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Metrics Grid: 4 columns x 2 rows -->
                <Border x:Name="MetricsCard"
                        Background="{DynamicResource CardBackgroundBrush}"
                        BorderBrush="{DynamicResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="18,16"
                        Margin="0,0,0,14"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="12" />
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="12" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Row 1 -->
                        <!-- Precipitation -->
                        <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
                            <TextBlock Text="Precipitation"
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,0,0,6"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Assets/PNG/ui_water.png"
                                       Width="14"
                                       Height="14"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock x:Name="PrecipitationText"
                                           Style="{StaticResource MetricValueStyle}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Humidity -->
                        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">
                            <TextBlock Text="Humidity"
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,0,0,6"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Assets/PNG/ui_humidity.png"
                                       Width="14"
                                       Height="14"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock x:Name="HumidityText"
                                           Style="{StaticResource MetricValueStyle}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Wind -->
                        <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center">
                            <TextBlock Text="Wind"
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,0,0,6"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Assets/PNG/ui_wind.png"
                                       Width="14"
                                       Height="14"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock x:Name="WindText"
                                           Style="{StaticResource MetricValueStyle}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <!-- UV Index -->
                        <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center">
                            <TextBlock Text="UV Index"
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,0,0,6"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Assets/PNG/ui_dryness.png"
                                       Width="14"
                                       Height="14"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock x:Name="UVIndexText"
                                           Style="{StaticResource MetricValueStyle}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Pressure -->
                        <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center">
                            <TextBlock Text="Pressure"
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,0,0,6"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Assets/PNG/ui_barometer.png"
                                       Width="14"
                                       Height="14"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock x:Name="PressureText"
                                           Style="{StaticResource MetricValueStyle}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Cloudiness -->
                        <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center">
                            <TextBlock Text="Cloudiness"
                                       Style="{StaticResource MetricLabelStyle}"
                                       Margin="0,0,0,6"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Assets/PNG/ui_clouds.png"
                                       Width="14"
                                       Height="14"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <TextBlock x:Name="CloudCoverText"
                                           Style="{StaticResource MetricValueStyle}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <UniformGrid x:Name="DailyForecastGrid" 
                             Rows="1" 
                             Columns="5"
                             Margin="0,6,0,0" />
            </StackPanel>

            <!-- Settings View -->
            <StackPanel x:Name="SettingsView" Visibility="Collapsed">
                <Grid x:Name="SettingsContent"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
