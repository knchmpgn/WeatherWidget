<Window
    x:Class="WeatherWidget.Views.WeatherFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherWidget.Views"
    Activated="Window_Activated">
    <Grid x:Name="RootGrid" Loaded="RootGrid_Loaded">
        <Grid.Resources>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#EDEDED" />
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#EDEDED" />

        <SolidColorBrush x:Key="FlyoutBackgroundBrush" Color="#CC1C1C1C" />
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#B82A2A2A" />

        <SolidColorBrush x:Key="CardBorderBrush" Color="#353535" />
        <SolidColorBrush x:Key="DividerBrush" Color="#3A3A3A" />

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root"
                                                                       Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <SolidColorBrush Color="#22FFFFFF" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root"
                                                                       Storyboard.TargetProperty="Background">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <SolidColorBrush Color="#14FFFFFF" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
            <Setter Property="Opacity" Value="0.6" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        </Style>
        </Grid.Resources>

        <Border x:Name="MainBorder"
                Width="560"
                Background="{StaticResource FlyoutBackgroundBrush}"
                CornerRadius="12"
                Padding="24">
            <Grid x:Name="ContentGrid">
                <Grid x:Name="WeatherView">
                    <StackPanel>
                        <!-- Location Name + Actions -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="CityText"
                                       Grid.Column="0"
                                       FontSize="18"
                                       FontWeight="ExtraBold"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       Opacity="0.9"
                                       VerticalAlignment="Top" />

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top">
                                <Button Click="OpenSettings_Click"
                                        Style="{StaticResource IconButtonStyle}"
                                        ToolTipService.ToolTip="Settings">
                                    <TextBlock Text="&#xE713;"
                                               FontFamily="Segoe Fluent Icons"
                                               FontSize="16"
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               Opacity="0.7" />
                                </Button>

                                <Button Click="OpenWeatherApp_Click"
                                        Style="{StaticResource IconButtonStyle}"
                                        Margin="4,0,0,0"
                                        ToolTipService.ToolTip="Open Weather App">
                                    <TextBlock Text="&#xE8A7;"
                                               FontFamily="Segoe Fluent Icons"
                                               FontSize="16"
                                               Foreground="{StaticResource PrimaryTextBrush}"
                                               Opacity="0.7" />
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image x:Name="LargeIcon"
                                   Grid.Column="0"
                                   Width="80"
                                   Height="80"
                                   Margin="0,0,28,0"
                                   VerticalAlignment="Center" />

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" VerticalAlignment="Center">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock x:Name="MainTemp"
                                                       Grid.Column="0"
                                                       FontSize="52"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource PrimaryTextBrush}"
                                                       Margin="0,0,0,4" />

                                            <StackPanel Grid.Column="1"
                                                        Margin="16,10,0,0">
                                                <StackPanel Orientation="Horizontal"
                                                            Margin="0,0,0,2">
                                                    <TextBlock Text="&#x25B2;"
                                                               FontSize="11"
                                                               Foreground="{StaticResource SecondaryTextBrush}"
                                                               Opacity="0.7"
                                                               Margin="0,0,4,0" />
                                                    <TextBlock x:Name="HighTempText"
                                                               FontSize="12"
                                                               Foreground="{StaticResource SecondaryTextBrush}"
                                                               Opacity="0.8" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#x25BC;"
                                                               FontSize="11"
                                                               Foreground="{StaticResource SecondaryTextBrush}"
                                                               Opacity="0.7"
                                                               Margin="0,0,4,0" />
                                                    <TextBlock x:Name="LowTempText"
                                                               FontSize="12"
                                                               Foreground="{StaticResource SecondaryTextBrush}"
                                                               Opacity="0.8" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock x:Name="ConditionFull"
                                                   FontSize="15"
                                                   Foreground="{StaticResource PrimaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,0,0,4" />
                                    </StackPanel>

                                    <TextBlock x:Name="FeelsLikeText"
                                               Grid.Row="1"
                                               FontSize="13"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               Opacity="0.7" />
                                </Grid>

                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom"
                                      Margin="16,0,8,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Sunrise"
                                                   Style="{StaticResource MetricLabelStyle}"
                                                   Margin="0,0,0,6"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Image Source="ms-appx:///Assets/PNG/ui_sunrise.png"
                                                   Width="14"
                                                   Height="14"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center" />
                                            <TextBlock x:Name="SunriseInlineText"
                                                       Style="{StaticResource MetricValueStyle}"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                HorizontalAlignment="Center">
                                        <TextBlock Text="Sunset"
                                                   Style="{StaticResource MetricLabelStyle}"
                                                   Margin="0,0,0,6"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center" />
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Image Source="ms-appx:///Assets/PNG/ui_sunset.png"
                                                   Width="14"
                                                   Height="14"
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center" />
                                            <TextBlock x:Name="SunsetInlineText"
                                                       Style="{StaticResource MetricValueStyle}"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Border x:Name="MetricsCard"
                                Background="{StaticResource CardBackgroundBrush}"
                                BorderBrush="{StaticResource CardBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="18,16"
                                Margin="0,0,0,14">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="12" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Precipitation"
                                               Style="{StaticResource MetricLabelStyle}"
                                               Margin="0,0,0,6"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Image Source="ms-appx:///Assets/PNG/ui_precipitation.png"
                                               Width="14"
                                               Height="14"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center" />
                                        <TextBlock x:Name="PrecipitationText"
                                                   Style="{StaticResource MetricValueStyle}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Humidity"
                                               Style="{StaticResource MetricLabelStyle}"
                                               Margin="0,0,0,6"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Image Source="ms-appx:///Assets/PNG/ui_humidity.png"
                                               Width="14"
                                               Height="14"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center" />
                                        <TextBlock x:Name="HumidityText"
                                                   Style="{StaticResource MetricValueStyle}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Wind"
                                               Style="{StaticResource MetricLabelStyle}"
                                               Margin="0,0,0,6"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Image Source="ms-appx:///Assets/PNG/ui_wind.png"
                                               Width="14"
                                               Height="14"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center" />
                                        <TextBlock x:Name="WindText"
                                                   Style="{StaticResource MetricValueStyle}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center">
                                    <TextBlock Text="UV Index"
                                               Style="{StaticResource MetricLabelStyle}"
                                               Margin="0,0,0,6"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Image Source="ms-appx:///Assets/PNG/ui_day_night.png"
                                               Width="14"
                                               Height="14"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center" />
                                        <TextBlock x:Name="UVIndexText"
                                                   Style="{StaticResource MetricValueStyle}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Pressure"
                                               Style="{StaticResource MetricLabelStyle}"
                                               Margin="0,0,0,6"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Image Source="ms-appx:///Assets/PNG/ui_barometer.png"
                                               Width="14"
                                               Height="14"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center" />
                                        <TextBlock x:Name="PressureText"
                                                   Style="{StaticResource MetricValueStyle}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Cloud Cover"
                                               Style="{StaticResource MetricLabelStyle}"
                                               Margin="0,0,0,6"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Image Source="ms-appx:///Assets/PNG/ui_cloud.png"
                                               Width="14"
                                               Height="14"
                                               Margin="0,0,6,0"
                                               VerticalAlignment="Center" />
                                        <TextBlock x:Name="CloudCoverText"
                                                   Style="{StaticResource MetricValueStyle}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Grid x:Name="DailyForecastGrid"
                              ColumnSpacing="10"
                              Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Grid x:Name="SettingsView" Visibility="Collapsed">
                    <StackPanel>
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Style="{StaticResource IconButtonStyle}" Click="Back_Click">
                                <TextBlock Text="&#xE72B;"
                                           FontFamily="Segoe Fluent Icons"
                                           FontSize="16"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           Opacity="0.8" />
                            </Button>

                            <TextBlock Grid.Column="1"
                                       Text="Settings"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </Grid>

                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Location"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       Margin="0,0,0,12" />

                            <CheckBox x:Name="UseManualLocationCheck"
                                      Content="Use manual location"
                                      Margin="0,0,0,12"
                                      Foreground="{StaticResource PrimaryTextBrush}"
                                      Checked="UseManualLocationCheck_Changed"
                                      Unchecked="UseManualLocationCheck_Changed" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Latitude"
                                               FontSize="12"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               Opacity="0.7"
                                               Margin="0,0,0,6" />
                                    <TextBox x:Name="LatitudeBox" />
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Longitude"
                                               FontSize="12"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               Opacity="0.7"
                                               Margin="0,0,0,6" />
                                    <TextBox x:Name="LongitudeBox" />
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="When disabled, location is detected automatically from your IP address."
                                       FontSize="11"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Opacity="0.7"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Startup"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       Margin="0,0,0,12" />

                            <CheckBox x:Name="StartWithWindowsCheck"
                                      Content="Start with Windows"
                                      Foreground="{StaticResource PrimaryTextBrush}"
                                      Margin="0,0,0,6" />

                            <TextBlock Text="The widget will appear automatically in your taskbar on startup."
                                       FontSize="11"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Opacity="0.7"
                                       TextWrapping="Wrap"
                                       Margin="20,0,0,0" />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button x:Name="SaveSettingsButton"
                                    Grid.Column="1"
                                    Click="SaveSettings_Click"
                                    Padding="16,8">
                                <TextBlock Text="Save" FontWeight="SemiBold" />
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
